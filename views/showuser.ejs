<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ALL USER</title>
    <style>
        table , th , td {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
       <% for (let user of users) { %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td>
                
                <form action="/user/<%= user.id %>/edit" method="GET" style="display:inline;">
                    <button>Edit</button>
                </form>

                
            </td>
        </tr>
       <% } %>
    </table>

    <br>
    <a href="/user/new">
        <button>Add user</button>
    </a>
     <a href="/user/delete">
        <button>Delete User</button>
    </a>
</body>
</html>
